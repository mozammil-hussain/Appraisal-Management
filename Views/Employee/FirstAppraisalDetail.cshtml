
@{
    ViewData["Title"] = "FirstAppraisalDetail";
}

<h1 style="color:dimgrey;">Review Appraisal</h1>

@model Appraisal
@{
    if (ViewBag.status != null)
    {

        if (TempData["ErrorMsg"] != null)
        {
            <p class="container text-danger"><b>@TempData["ErrorMsg"]</b></p>
        }

        <form asp-action="FirstAppraisalDetail" asp-controller="Employee" method="post" asp-route-appID="@ViewBag.status.AppraisalId">
            <div class="container mt-4 shadow-lg">





                <div class=" mx-auto border border-bottom-0">

                    @if (ViewBag.Manager != null)
                    {
                        <label class="mt-2 mx-2">Manager Name</label>



                        <h6 class="text-secondary mt-2 mx-2">@ViewBag.Manager</h6>
                        <hr />
                    }



                    <label class="mt-2 mx-2">Objective</label>



                    <h6 class="text-secondary mt-2 mx-2">@ViewBag.status.Objective</h6>
                    <hr />

                    <label class="mt-2 mx-2">Appraisal Start Date</label>



                    <h6 class="text-secondary mt-2 mx-2">@ViewBag.status.StartDate</h6>
                    <hr />
                    <label class="mt-2 mx-2">Appraisal End  Date</label>



                    <h6 class="text-secondary mt-2 mx-2 text-warning">@ViewBag.status.EndDate</h6>
                    <hr />


                    @if (ViewBag.comps != null)
                    {

                        foreach (var i in ViewBag.comps)
                        {
                            <div class="row">
                                <div class="col-sm-4">
                                    <label class="mt-2 mx-2">Compitence</label>

                                    <h6 class="text-secondary mt-2 mx-2"> @i.CompetencyName </h6>
                                </div>
                                <div class="col-sm-4">
                                    <label class="mt-2 mx-2">Your Comment</label>

                                    <input type="text" class="form-control" asp-for="EComments">
                                    <span asp-validation-for="_emp_comments" class="text-danger"></span>
                                </div>
                                <div class="col-sm-4">
                                    <label class="mt-2 mx-2">Rate Yourself</label>
                                    <select class="form-control" asp-for="ERating">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>


                                </div>
                              
                                </div>
                            <hr />
                        }
                    }

                   

                <input type="submit" class="btn btn-success mt-3 mb-2" value="Submit">



            </div>



        </form>
    }
    else
    {
        <h3 class="mt-3 mx-4">No Appraisal Form</h3>
    }
}